# Farm Manager Configuration
NODE_ENV=production
PORT=3001
API_KEY=your_api_key_here

# Database Configuration
DATABASE_URL=mysql://farmboy:password@mariadb:3306/farm_manager

# EternalFarm Configuration
ETERNALFARM_AGENT_KEY=your_eternalfarm_agent_key
ETERNAL_API_URL=https://api.eternalfarm.net
AUTH_AGENT_KEY=${ETERNALFARM_AGENT_KEY}
ETERNAL_FARM_KEY=your_eternal_farm_key
ETERNAL_AUTH_KEY=your_eternal_auth_key

# Discord Integration
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# DreamBot Configuration
DREAMBOT_USERNAME=your_dreambot_username
DREAMBOT_PASSWORD=your_dreambot_password
DREAMBOT_SCRIPT=your_default_script_name
DREAMBOT_WORLD=301
DREAMBOT_ARGS=--no-splash --developer-mode
DREAMBOT_DIR=/root/DreamBot/BotData
DREAMBOT_CLIENT_URL=https://dreambot.org/DBLauncher.jar

# Display Configuration
DISPLAY=:1
RESOLUTION=1920x1080
COLOR_DEPTH=24
XAUTHORITY=/root/.Xauthority

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_COUNTRY=US
SSL_CERT_STATE=State
SSL_CERT_LOCALITY=City
SSL_CERT_ORGANIZATION=YourOrganization
SSL_CERT_DAYS=3650
SSL_KEY_SIZE=4096
SSL_VNC_CERT=/etc/ssl/certs/vnc-server.pem
SSL_VNC_KEY=/etc/ssl/private/vnc-server-key.pem
SSL_NOVNC_CERT=/etc/ssl/certs/novnc-cert.pem
SSL_NOVNC_KEY=/etc/ssl/private/novnc-key.pem

# VNC Configuration
VNC_PORT=5900
NOVNC_PORT=8080
VNC_PASSWORD=your_vnc_password
VNC_GEOMETRY=1920x1080
VNC_DEPTH=24
VNC_NETWORK=0.0.0.0
VNC_SSL_ONLY=true
NOVNC_SSL_ONLY=true

# System Configuration
HYPERTHREADS_PER_CLIENT=2
CLIENTS_PER_WORKSPACE=4
CPU_PRIORITY=-10
HOSTNAME=$(hostname)

# Java Configuration
JAVA_HOME=/usr/lib/jvm/adoptopenjdk-8-hotspot-amd64
JAVA_OPTS=-Xmx512m -XX:+UseG1GC
PATH=$JAVA_HOME/bin:$PATH

# Network Configuration
NETWORK_INTERFACE=eth0
ALLOW_WEBSOCKET=true
WEBSOCKET_PORT=8080
WEBSOCKET_HOST=0.0.0.0

# Monitoring Configuration
MONITOR_INTERVAL=5
CPU_STATS_INTERVAL=10
SYNC_INTERVAL=300
LOG_LEVEL=info
LOG_DIR=/var/log
MAX_LOG_SIZE=100M
MAX_LOG_FILES=10

# Security Configuration
SSH_PASSWORD=farmboy
ROOT_PASSWORD=farmboy

# EternalFarm Tools Configuration
ETERNALFARM_AGENT_VERSION=2.1.3
ETERNALFARM_CHECKER_VERSION=2.0.13
ETERNALFARM_BROWSER_VERSION=2.4.5

# Tool URLs (for auto-updates)
ETERNALFARM_AGENT_URL=https://eternalfarm.ams3.cdn.digitaloceanspaces.com/agent/${ETERNALFARM_AGENT_VERSION}/linux-amd64/EternalFarmAgent
ETERNALFARM_CHECKER_URL=https://eternalfarm.ams3.cdn.digitaloceanspaces.com/checker/${ETERNALFARM_CHECKER_VERSION}/linux-amd64/EternalFarmChecker
ETERNALFARM_BROWSER_URL=https://eternalfarm.ams3.cdn.digitaloceanspaces.com/browser-automator/${ETERNALFARM_BROWSER_VERSION}/linux-amd64/EternalFarmBrowserAutomator

# MySQL Database Settings
MYSQL_HOST=mariadb
MYSQL_PORT=3306
MYSQL_DATABASE=farm_manager
MYSQL_USER=farmboy
MYSQL_PASSWORD=your_secure_password
MYSQL_ROOT_PASSWORD=your_secure_root_password 